{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "g++",
    "isShellCommand": true,

    "args": [
        "-o", "Dalmuti.out",
        "Source/Main.cpp",
        "Source/Player.cpp",
        "Source/GameManager.cpp",
        "Source/Logging/Log.cpp",
        "Source/Logging/Memory.cpp",
        "Source/AI/Monkey.cpp",
        "-std=c++11"
        ],

    "showOutput": "always",
    "suppressTaskName": true,

    "tasks": [
    { 
        "isBuildCommand": true,
        "taskName": "debug-build",
        "args": [
            "-g",
            "-D _DEBUG"]
    },
    {
        "isBuildCommand": true,
        "taskName": "release-build",
        "args": ["-D NDEBUG"]
    }
    ]
}